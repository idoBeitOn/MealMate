							"raw": "{{base_url}}/api/recipes/search?q=chicken&difficulty=easy&maxCookTime=30&sortBy=likes",
							"host": ["{{base_url}}"],
							"path": ["api", "recipes", "search"],
							"query": [
								{
									"key": "q",
									"value": "chicken",
									"description": "Search query"
								},
								{
									"key": "difficulty",
									"value": "easy",
									"description": "Filter by difficulty (easy, medium, hard)"
								},
								{
									"key": "maxCookTime",
									"value": "30",
									"description": "Maximum cook time in minutes"
								},
								{
									"key": "sortBy",
									"value": "likes",
									"description": "Sort by: likes, createdAt, trending"
								}
							]
						},
						"description": "Search recipes with filters (requires authentication)"
					},
					"response": []
				},
				{
					"name": "Update Recipe",
					"request": {
						"method": "PUT",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{token}}"
							},
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"title\": \"Updated Chicken Curry\",\n  \"description\": \"Updated description\",\n  \"cookTime\": 35\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/recipes/:id",
							"host": ["{{base_url}}"],
							"path": ["api", "recipes", ":id"],
							"variable": [
								{
									"key": "id",
									"value": "RECIPE_ID_HERE"
								}
							]
						},
						"description": "Update a recipe (only recipe author can update)"
					},
					"response": []
