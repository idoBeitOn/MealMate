							"mode": "raw",
							"raw": "{\n  \"title\": \"Chicken Curry\",\n  \"description\": \"Delicious spicy chicken curry\",\n  \"ingredients\": [\n    {\n      \"name\": \"Chicken\",\n      \"amount\": \"500g\"\n    },\n    {\n      \"name\": \"Curry Powder\",\n      \"amount\": \"2 tbsp\"\n    }\n  ],\n  \"steps\": [\n    \"Heat oil in pan\",\n    \"Add chicken and cook\",\n    \"Add curry powder\",\n    \"Simmer for 20 minutes\"\n  ],\n  \"nutrition\": {\n    \"calories\": 350,\n    \"fat\": 15,\n    \"carbohydrates\": 10,\n    \"protein\": 40\n  },\n  \"cookTime\": 30,\n  \"difficulty\": \"medium\",\n  \"isPublic\": true\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/recipes",
							"host": ["{{base_url}}"],
							"path": ["api", "recipes"]
						},
						"description": "Create a new recipe (requires authentication)"
					},
